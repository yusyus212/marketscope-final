<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>MarketScope</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <div id="part1">
        <h1>MarketScope Stock Search</h1>
    </div>

    <div id="part2">
        
        <div id="inner1">
            <h2>Search Stock</h2>
            <form action="/analyze" method="GET">
                <input type="text" name="symbol" placeholder="Symbol (ex. AAPL)" required>
                <button type="submit">Search</button>
            </form>
        </div>

        <% if (typeof error !== 'undefined') { %>
            <div id="inner2" style="border-color: red;">
                <h2 style="color: red;">Error</h2>
                <p style="color: red; font-weight: bold;"><%= error %></p>
            </div>
        <% } %>

        <div id="inner3" style="top: 200px; height: 100px;">
            <h2>Menu</h2>
            <p>
                <a href="/watchlist">View My Watchlist</a>
            </p>
        </div>

    </div>

    <div id="footer">
        CMSC335 Final Project
    </div>

</body>
</html>